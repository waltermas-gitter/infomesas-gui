<!DOCTYPE html>
<html>
<head>
<link rel="icon" type="image/png" sizes="32x32" href="icons/infomesasicon.png">
<style>

<!--columnas-->
* {
  box-sizing: border-box;
}
.column {
  float: left;
  padding: 10px;
}

.left {
  width: 30%;
}

.middle {
  width: 40;
}

.right {
  width: 25%;
}

/* Clear floats after the columns */
.row:after {
  content: "";
  display: table;
  clear: both;
}

table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
}

		td, th { 
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}

input { 
    text-align: right; 
    width: 20%;
}

p {
	text-align: right;
}
</style>

</head>


<body>
<!--tabla -->
<div class="row">
	<div class="column left">
	<table>
		{% for item in precios %}
		<tr>
			<td>
			{{ item[0] }}
			</td>
			<td>
			{{ item[1] }}
			</td>
		</tr>
		{% endfor %}
	</table>
	</div>

	<!--conversor-->
	<div class="column middle" style="background-color:#bbb;">
		<h2>Calculo de pies</h2>
		<p><label>espesor: </label><input id="espesor" type="text"></p>
		<p><label>ancho: </label><input id="ancho" type="text"></p>
		<p><label>largo (cm): </label><input id="largo" type="text"></p>
		<p><label>cantidad: </label><input id="cantidad" type="text" value=1></p>
		<p><label>precio: </label><input id="precio" type="text" value=1></p>
		<p><button id="btnCalcular">Calcular</button></p>
		<p><div id="divResultado"></div></p>

	<!--hoja-->
		<h2>Calculo de cortes</h2>
		<p><label>largo hoja: </label><input id="largo hoja" type="text" value=260></p>
		<p><label>ancho hoja: </label><input id="ancho hoja" type="text" value=183></p>
		<p><label>largo (cm): </label><input id="largo corte" type="text"></p>
		<p><label>ancho (cm): </label><input id="ancho corte" type="text"></p>
		<p><label>cantidad: </label><input id="cantidad corte" type="text" value=1></p>
		<p><label>precio: </label><input id="precio hoja" type="text" value=1></p>
		<p><button id="btnCalcularCorte">Calcular</button></p>
		<p><div id="divResultadoCorte"></div></p>
	</div>

	<!--sumatoria-->
	<div class="column right" style="background-color:#bbb;">
		<h2 style="text-align:right;">Sumatoria</h2>
		<p><input id="s1" type="text"></p>
		<p><input id="s2" type="text"></p>
		<p><input id="s3" type="text"></p>
		<p><input id="s4" type="text"></p>
		<p><input id="s5" type="text"></p>
		<p><button id="btnCalcularSuma">Calcular</button></p>
		<p><div id="divResultadoSuma"></div></p>
		<p><iframe width="219" height="302" src="http://calculator-1.com/outdoor/?f=0666666&r=666666" scrolling="no" frameborder="0"></iframe><br /><a href="https://calculator-1.com/">Calculator</a></p>
	</div>
</div>

<script>
		window.onload = iniciar;
function iniciar(){
	var btnCalcular = document.getElementById("btnCalcular");
	btnCalcular.addEventListener("click", clickBtnCalcular);
	var btnCalcularCorte = document.getElementById("btnCalcularCorte");
	btnCalcularCorte.addEventListener("click", clickBtnCalcularCorte);
	var btnCalcularCorte = document.getElementById("btnCalcularSuma");
	btnCalcularCorte.addEventListener("click", clickBtnCalcularSuma);


}

function clickBtnCalcular(){
	var espesor = document.getElementById("espesor").value;
	var ancho = document.getElementById("ancho").value;
	var largo = document.getElementById("largo").value;
	var cantidad = document.getElementById("cantidad").value;
	var precio = document.getElementById("precio").value;
	var pies = Math.round((espesor * ancho * largo * cantidad * 0.002734 + Number.EPSILON) * 100) / 100;

	<!--var precioTotal = pies * precio;-->
	var precioTotal = Math.round(((pies * precio) + Number.EPSILON) * 100) / 100;


	var divResultado = document.getElementById("divResultado");
	divResultado.innerHTML = `${pies} pies, ${precioTotal} pesos`;

}

function clickBtnCalcularCorte(){
	var largoHoja = document.getElementById("largo hoja").value;
	var anchoHoja = document.getElementById("ancho hoja").value;
	var anchoCorte = document.getElementById("ancho corte").value;
	var largoCorte = document.getElementById("largo corte").value;
	var cantidadCorte = document.getElementById("cantidad corte").value;
	var precioHoja = document.getElementById("precio hoja").value;
	<!-- var m2 = largoHoja * anchoHoja / 10000 * cantidadCorte -->
	var m2 = largoCorte * anchoCorte / 10000 * cantidadCorte
	var precioTotalCorte = precioHoja / (largoHoja * anchoHoja / 10000) * m2


	var divResultadoCorte = document.getElementById("divResultadoCorte");
	divResultadoCorte.innerHTML = `${m2} m2, ${precioTotalCorte} pesos`;

}

function clickBtnCalcularSuma(){
	var s1 = document.getElementById("s1").value;
	var s2 = document.getElementById("s2").value;
	var s3 = document.getElementById("s3").value;
	var s4 = document.getElementById("s4").value;
	var s5 = document.getElementById("s5").value;
//	var totalSuma = parseInt(s1) + parseInt(s2) + parseInt(s3) + parseInt(s4) + parseInt(s5);
	var totalSuma = Number(s1) + Number(s2) + Number(s3) + Number(s4) + Number(s5);
	
	var divResultadoSuma = document.getElementById("divResultadoSuma");
	divResultadoSuma.innerHTML = `Total: ${totalSuma}`;


}


</script>
</body>
</html>

